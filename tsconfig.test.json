{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "lib": [
      "es2017"
    ],
    "types": [
      "mocha"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
